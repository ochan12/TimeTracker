<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/space_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="New Space"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <Button
        android:id="@+id/startTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:width="75dp"
        android:height="75dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/start_task"
        android:foreground="@drawable/ic_baseline_play_arrow_24"
        android:foregroundGravity="center"
        android:minWidth="50dp"
        app:cornerRadius="50dp"
        app:icon="@drawable/start_background_circle"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="60dp"
        app:iconTint="@color/start_green"
        app:iconTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/pauseTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:width="75dp"
        android:height="75dp"
        android:background="#00FFFFFF"
        android:backgroundTintMode="src_in"
        android:contentDescription="@string/pause_task"
        android:foreground="@drawable/ic_baseline_pause_24"
        android:foregroundGravity="center"
        android:minWidth="50dp"
        android:visibility="invisible"
        app:cornerRadius="50dp"
        app:icon="@drawable/pause_background_circle"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="60dp"
        app:iconTint="@color/pause_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/stopTaskButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:width="50dp"
        android:height="50dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/stop_task"
        android:foreground="@drawable/ic_baseline_stop_24"
        android:foregroundGravity="center"
        android:minWidth="50dp"
        app:icon="@drawable/stop_background_circle"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="45dp"
        app:iconTint="@color/stop_red"
        app:iconTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="@+id/startTaskButton"
        app:layout_constraintEnd_toStartOf="@+id/startTaskButton"
        app:layout_constraintTop_toTopOf="@+id/startTaskButton" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Select space"
        android:minHeight="48dp"
        app:layout_constraintEnd_toStartOf="@+id/add_space_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_space_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:contentDescription="add space"
        android:foreground="@drawable/ic_outline_add_24"
        android:foregroundGravity="center_vertical|center|center_horizontal"
        android:foregroundTint="#FFFFFF"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>